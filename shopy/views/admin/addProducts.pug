extends ../layout

block styles
  link(rel='stylesheet', href='/css/add-product.css')

block content
  form.registration(method='POST', action='/register-product')
    label(for='title') Book Title:
    input#title.registration__item(type='text', name='title', required)
    label(for='price') Price:
    input#description.registration__item(name='price', type='number', required)
    br
    label(for='description') Description:
    textarea#description.registration__item(name='description', required)
    br
    label(for='description') Image:
    input#description.registration__item(name='description', type='text')
    br
    input(
      type='submit',
      value='Register Book',
      style='width: 100%; background-color: #4CAF50; color: white; padding: 14px 20px; margin: 8px 0; border: none; border-radius: 4px; cursor: pointer;'
    )
