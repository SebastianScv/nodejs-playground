extends ../layout

block styles
    link(rel='stylesheet', href='/css/add-product.css')

block content
    - var buttonText = "Register Book"
    - var actionText = "/admin/register-product"
    - if (editMode) {
    - buttonText = "Edit Product"
    - actionText = "/admin/edit-product"
    - }
    form.registration(method='POST', action=actionText)
        input#productId.registration__item(
            type='hidden',
            name='productId',
            value=product ? product.id : '',
            required
        )
        label(for='title') Book Title:
        input#title.registration__item(
            type='text',
            name='title',
            value=product ? product.title : '',
            required
        )
        label(for='price') Price:
        input#price.registration__item(
            name='price',
            type='number',
            value=product ? product.price : '',
            required
        )
        br
        label(for='description') Description:
        input#description.registration__item(
            type='text',
            name='description',
            value=product ? product.description : '',
            required
        )
        br
        label(for='image') Image:
        input#image.registration__item(
            name='image',
            type='text',
            value=product ? product.image : ''
        )
        br
        input(
            type='submit',
            value=buttonText,
            style='width: 100%; background-color: #4CAF50; color: white; padding: 14px 20px; margin: 8px 0; border: none; border-radius: 4px; cursor: pointer;'
        )
